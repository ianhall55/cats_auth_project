<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCatsDay1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <ul>
    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    <% end %>
  </ul>
  <% if current_user %>
    <h2>User: <%= current_user.username %></h2>
    <%= button_to :logout, session_url, method: :delete %>
  <% else %>
    <%= button_to :login, new_session_url, method: :get %>
  <% end %>
</header>
<%= yield %>

<footer>
  <p>
    99 cats site. Best cat rentals in the world!

    <%= yield :footer %>
  </p>
</footer>
</body>
</html>
